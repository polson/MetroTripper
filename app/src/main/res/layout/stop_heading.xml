<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/stop_heading_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:background="@color/dark_gray">

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/stop_heading_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop 9999"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_below="@+id/stop_heading_route"
            android:id="@+id/stop_heading_description"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Southbound B to France Av"
            android:textColor="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/light_gray_line"
        style="@style/horizontal_line"
        android:background="@color/light_gray"
        android:layout_below="@+id/stop_heading_main" />

    <View
        style="@style/horizontal_line"
        android:background="@color/dark_gray"
        android:layout_below="@+id/light_gray_line" />

    <LinearLayout
        android:id="@+id/stop_heading_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_heading_main"
        android:orientation="horizontal"
        android:background="@color/gray">


        <RelativeLayout
            android:id="@+id/stop_heading_get_times"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:background="@drawable/gray_button_selector">

            <ProgressBar
                android:id="@+id/stop_heading_progress_spinner"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_centerHorizontal="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/stop_heading_get_times_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clock"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/stop_heading_show_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_location"
            android:layout_weight="1"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:background="@drawable/gray_button_selector" />

        <ImageView
            android:id="@+id/stop_heading_save_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:background="@drawable/gray_button_selector" />

    </LinearLayout>
</RelativeLayout>